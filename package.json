{
  "name": "calculator-api",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm install --production",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "security:audit": "npm audit",
    "security:snyk": "snyk test",
    "docker:build": "docker build -t calculator-api .",
    "docker:run": "docker run -p 3000:3000 calculator-api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f web",
    "setup": "setup.bat",
    "setup:ps": "powershell -ExecutionPolicy Bypass -File setup.ps1"
  },
  "author": "DevOps Team",
  "license": "ISC",
  "description": "Calculator API with DevOps pipeline integration",
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "snyk": "^1.1248.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "calculator",
    "api",
    "devops",
    "jenkins",
    "docker"
  ],
  "type": "commonjs",
  "jest-junit": {
    "outputDirectory": ".",
    "outputName": "test-results.xml"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
