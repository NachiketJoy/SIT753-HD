{
  "dashboard": {
    "id": null,
    "title": "Calculator API Dashboard",
    "tags": ["calculator", "api", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Total",
        "type": "stat",
        "targets": [
          {
            "expr": "http_requests_total",
            "legendFormat": "Total Requests"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Calculations Performed",
        "type": "stat",
        "targets": [
          {
            "expr": "calculations_total",
            "legendFormat": "Total Calculations"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "nodejs_memory_usage_bytes",
            "legendFormat": "Memory Usage (bytes)"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Application Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "nodejs_uptime_seconds",
            "legendFormat": "Uptime (seconds)"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
